<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
   <item android:drawable="@drawable/button_circle_gradient"/>
    <item>
        <shape android:shape="rectangle"
            android:padding="20dp"
            >
            <corners
                android:radius="58dp"
                android:topLeftRadius="58dp"
                android:topRightRadius="58dp"
                android:bottomLeftRadius="58dp"
                android:bottomRightRadius="58dp"
                />
            <solid
                android:color="@color/gray"
                />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="15dp"
                />
            <size
                android:width="64dp"
                android:height="64dp"
                />
            <stroke
                android:width="2dp"
                android:color="@android:color/transparent"
                />
        </shape>
    </item>
    <item android:drawable="@drawable/fashion" />
</layer-list>
