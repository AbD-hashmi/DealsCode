<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LLView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="0.25">

            <ImageView
                android:id="@+id/dealimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher_round" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".75"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView
                    android:id="@+id/tvoutletname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="burger king"
                    android:textColor="@color/white"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/avenir"
                    android:textSize="@dimen/font_medium" />

                <TextView
                    android:id="@+id/orderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order id"
                    android:background="@color/yellowcol"
                    android:layout_margin="3dp"

                    android:fontFamily="@font/avenir"
                    android:textSize="@dimen/font_medium"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                        android:id="@+id/tvlocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/map_black"
                        android:drawablePadding="5dp"
                        android:ellipsize="end"
                        android:visibility="gone"
                        android:gravity="center_vertical"
                        android:maxLength="8"
                        android:text="Gurgaon"
                        android:fontFamily="@font/avenir"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/white" />

                    <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                        android:id="@+id/tvdealdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:drawableLeft="@drawable/calender"
                        android:gravity="center_vertical"
                        android:text="24 nov 2016"
                        android:layout_margin="3dp"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/avenir"
                        android:textSize="@dimen/font_small"
                        android:layout_weight="1"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:drawableRight="@drawable/ic_keyboard_right_arrow_button"/>

                    <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                        android:id="@+id/tvwaiveoffrs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        android:text="Rs 10000"
                        android:visibility="gone"
                        android:drawableRight="@drawable/ic_keyboard_arrow_right_white_24dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/avenir"
                        android:textSize="@dimen/font_small"
                        android:textColor="@color/red" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                        android:id="@+id/tvdealstatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:paddingTop="7dp"
                        android:text="Cancelled"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/avenir"
                        android:layout_margin="3dp"
                        android:textSize="@dimen/font_small"
                        android:textColor="@color/red" />

                    <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                        android:id="@+id/tvcancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:background="@drawable/edittext_border"
                        android:paddingLeft="10dp"
                        android:paddingTop="3dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="3dp"
                        android:text="Gifted"
                        android:textSize="@dimen/font_small"
                        android:textColor="@color/green"
                        android:textStyle="bold"/>

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/border"/>

</LinearLayout>
