<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_bottom_to_top"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/RLdealdata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:id="@+id/ivdeal"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/banner_new" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivdeal"
                        android:background="@color/gray"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:padding="5dp">


                            <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_gravity="center_vertical"
                                android:drawablePadding="10dp"
                                android:gravity="center_vertical"
                                android:text="Order ID :"
                                android:fontFamily="@font/avenir"
                                android:textSize="@dimen/font_medium"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tvvoucherid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/tvview"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/avenir"
                                android:padding="3dp"
                                android:textSize="@dimen/font_medium"
                                android:textColor="@color/White" />
                            <!--         android:background="@color/buttoncol"-->

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="5dp">


                            <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_gravity="top"
                                android:fontFamily="@font/avenir"
                                android:textSize="@dimen/font_medium"
                                android:textColor="@color/white" />

                            <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView
                                android:id="@+id/tvdealname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:fontFamily="@font/avenir"
                                android:textSize="@dimen/font_medium"
                                android:textColor="@color/white"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_toLeftOf="@+id/ivQR"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView
                                    android:id="@+id/tvoutletname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:padding="3dp"
                                    android:text=""
                                    android:fontFamily="@font/avenir"
                                    android:textSize="@dimen/font_medium"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                                <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                                    android:id="@+id/tvoutletaddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:padding="3dp"
                                    android:text=""
                                    android:textSize="@dimen/font_small"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:padding="3dp">


                                    <TextView
                                        android:id="@+id/tvview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_toRightOf="@+id/tvstartime"
                                        android:text="-"
                                        android:visibility="gone"
                                        android:fontFamily="@font/avenir"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"/>

                                    <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                                        android:id="@+id/tvendtime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_gravity="center_vertical"
                                        android:layout_toRightOf="@+id/tvview"
                                        android:gravity="center_horizontal"
                                        android:text="10pm"
                                        android:visibility="gone"
                                        android:fontFamily="@font/avenir"
                                        android:textSize="@dimen/font_small"
                                        android:textColor="@color/white"/>

                                    <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                                        android:id="@+id/tvdealdate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="5dp"
                                        android:drawableLeft="@drawable/calender"
                                        android:drawablePadding="10dp"
                                        android:fontFamily="@font/avenir"
                                        android:gravity="center_vertical"
                                        android:textSize="@dimen/font_small"
                                        android:textColor="@color/white" />

                                    <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                                        android:id="@+id/tvstartime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:layout_gravity="center_vertical"
                                        android:fontFamily="@font/avenir"
                                        android:drawablePadding="10dp"
                                        android:gravity="center_vertical"
                                        android:textSize="@dimen/font_small"
                                        android:textColor="@color/white" />


                                </LinearLayout>

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/ivQR"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:scaleType="fitXY"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp" />

                        </RelativeLayout>


                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/LLlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RLdealdata"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/viewlist"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:indeterminateTint="@color/ProgressBarColor"
                        android:visibility="gone" />
                </LinearLayout>

                <TableLayout
                    android:id="@+id/RLAmaefsdount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TableRow>
                        <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/amt"
                            android:layout_alignParentLeft="true"
                            android:layout_weight="1"
                            android:text="Transaction ID"
                            android:fontFamily="@font/avenir"
                            android:textSize="@dimen/font_medium"
                            android:textColor="@color/white" />

                        <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView
                            android:id="@+id/tvtransactionId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="10dp"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text="1000"
                            android:textSize="@dimen/font_medium"
                            android:textColor="@color/white" />


                    </TableRow>


                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="25dp"
                    android:background="@color/gray"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TableRow>
                        <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView
                            android:id="@+id/tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount"
                            android:layout_weight="1"
                            android:fontFamily="@font/avenir"
                            android:textSize="@dimen/font_medium"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/total_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_below="@+id/tvtotalamount"
                            android:layout_marginRight="10dp"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text="1000"
                            android:textSize="@dimen/font_medium"
                            android:textColor="@color/white"/>
                    </TableRow>

                    <TableRow>
                        <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/amt"
                            android:id="@+id/tv_offerText"
                            android:text="Offer Applied "
                            android:layout_weight="1"
                            android:fontFamily="@font/avenir"

                            android:textSize="@dimen/font_medium"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tvoff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvtotalamount"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/avenir"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text="1000"
                            android:textSize="@dimen/font_medium"
                            android:textColor="@color/white" />

                    </TableRow>


                    <TableRow>

                        <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:id="@+id/amt3"
                            android:layout_below="@+id/amt2"
                            android:layout_weight="1"
                            android:text="Net Amount Paid"
                            android:fontFamily="@font/avenir"
                            android:textSize="@dimen/font_medium"
                            android:textColor="@color/white" />

                        <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView
                            android:id="@+id/tvtotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="10dp"
                            android:layout_below="@+id/tvtotalamount2"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text="1000"
                            android:fontFamily="@font/avenir"
                            android:textSize="@dimen/font_medium"
                            android:textColor="@color/white" />
                    </TableRow>


                </TableLayout>

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@drawable/button_gradient"
                    android:text="Request Cancellation"
                    android:fontFamily="@font/avenir"
                    android:visibility="gone"
                    android:textSize="@dimen/font_medium"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/LLpayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@drawable/button_gradient_image"
        android:orientation="vertical">



    </RelativeLayout>


    <include
        layout="@layout/activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

</android.support.constraint.ConstraintLayout>

