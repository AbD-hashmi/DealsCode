    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hmi.dealsnxt.Activity.AftersplashActivity"
    android:background="@drawable/banner01">


    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:text="Welcome to Xclusify"
        android:textAppearance="?android:textAppearanceLargeInverse"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:fontFamily="@font/avenir"
        app:layout_constraintBottom_toTopOf="@+id/fixtext"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/fixtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:padding="10dp"
        android:fontFamily="@font/avenir"
        android:text="We are here to make every experience\nin your life worth living"
        android:textAppearance="?android:textAppearanceMediumInverse"
        android:textColor="@color/White"
        android:gravity="center"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent" />

