<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/darkGray"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/RLdealdata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="5dp"
                    android:background="@color/White">

                    <ImageView
                        android:id="@+id/ivdeal"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/banner_new" />

                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/Rllikecount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="120dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivshare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="70dp"
                            android:layout_marginTop="10dp"
                            android:layout_toLeftOf="@+id/ivlikecount"
                            android:padding="5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/whiteshare" />

                        <ImageView
                            android:id="@+id/ivlikecount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="30dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/like_selector" />

                        <TextView
                            android:id="@+id/tvlike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/abstract_back"
                            android:gravity="center"
                            android:text="11"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/White" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivdeal"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView
                                android:id="@+id/tvoutletname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="Cafe Coffe Day"
                                android:textAppearance="?android:textAppearanceMedium"
                                android:textColor="@color/blackfontcolor"
                                android:textStyle="bold" />

                            <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView
                                android:id="@+id/tvoutletdistncekm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/tvoutletname"
                                android:background="@color/white"
                                android:gravity="left|bottom"
                                android:padding="3dp"
                                android:text="0.08km"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/blackfontcolor"
                                android:textStyle="bold"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                                android:id="@+id/tvoutletaddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/tvoutletname"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:text="Ground Floor, Paras Twin Tower, Sector 54, Haryana,Gurgaon 1220002"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/blackfontcolor"
                                android:textStyle="bold" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="5dp"
                                android:visibility="gone"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                                    android:id="@+id/tvstartime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_gravity="center_vertical"
                                    android:drawableLeft="@drawable/time_black"
                                    android:drawablePadding="10dp"
                                    android:gravity="center_vertical"
                                    android:text="4pm"
                                    android:textAppearance="?android:textAppearanceSmall"
                                    android:textColor="@color/blackfontcolor" />

                                <TextView
                                    android:id="@+id/tvview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_toRightOf="@+id/tvstartime"
                                    android:text="-"
                                    android:textColor="@color/blackfontcolor"
                                    android:textStyle="bold" />

                                <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                                    android:id="@+id/tvendtime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_toRightOf="@+id/tvview"
                                    android:gravity="center_horizontal"
                                    android:text="10pm"
                                    android:textAppearance="?android:textAppearanceSmall"
                                    android:textColor="@color/blackfontcolor" />

                            </RelativeLayout>

                        </LinearLayout>


                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="Title"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:padding="10dp"
                        android:src="@drawable/back" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/LLlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RLdealdata"
                    android:layout_marginBottom="5dp"
                    android:background="@color/darkGray"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/viewlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/White" />

                    <RelativeLayout
                        android:id="@+id/RLAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@color/White"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:gravity="center_horizontal"
                            android:text="Total Payable"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="@color/blackfontcolor" />

                        <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView
                            android:id="@+id/tvtotalamount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="10dp"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text="532"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="@color/blackfontcolor" />
                    </RelativeLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:background="#ffffff"
                        android:layout_marginTop="5dp"
                        android:padding="10dp"
                        android:layout_height="wrap_content">
                        <com.hmi.dealsnxt.HelperClass.JosefinSansRegularEditText
                            android:id="@+id/coupen_edit"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:hint="Enter Coupen Code"
                            android:layout_height="wrap_content" />
                        <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView
                            android:id="@+id/apply_now"
                            android:layout_width="0dp"
                            android:layout_marginLeft="10dp"
                            android:background="@color/colorPrimary"
                            android:text="Apply Now"
                            android:padding="5dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>

                <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                    android:id="@+id/tvdesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/LLlist"
                    android:layout_marginBottom="10dp"
                    android:background="@color/White"
                    android:gravity="center_vertical|top"
                    android:hint="Deal Description"
                    android:padding="10dp"
                    android:scrollbars="vertical"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/blackfontcolor"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/LLpayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/buttoncol"
                    android:orientation="vertical">

                    <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView
                        android:id="@+id/tvaddcar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/buttoncol"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:text="Proceed to Pay"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/White" />

                    <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView
                        android:id="@+id/tvaddcart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/buttoncol"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:text="Add to Cart"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/White"
                        android:visibility="gone" />

                    <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView
                        android:id="@+id/tvpayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="@color/buttoncol"
                        android:gravity="center_horizontal"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:text="Buy Now"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/White"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:indeterminateTint="@color/colorPrimary" />


</RelativeLayout>