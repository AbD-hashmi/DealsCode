<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hmi.dealsnxt.Activity.OTPActivity">

    <RelativeLayout
        android:id="@+id/RRL"
        android:layout_width="290dp"
        android:layout_height="450dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp">

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="410dp"
            android:layout_marginTop="30dp"
            android:background="@color/White"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical">

            <!--      android:background="@drawable/edittext_new_border"-->

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/redcolor"
                android:orientation="vertical"
              >

                <ImageView
                    android:id="@+id/pop_deal_image"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="100dp" />


            </LinearLayout>
            <RelativeLayout
                android:id="@+id/RLdata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                    android:id="@+id/tvdiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="30%off"
                    android:textSize="@dimen/font_medium"
                    android:textColor="@color/colorPrimary" />

                <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                    android:id="@+id/tvon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tvdiscount"
                    android:gravity="left|center_horizontal"
                    android:text="on"
                    android:textSize="@dimen/font_medium"
                    android:textColor="@color/colorPrimary" />

                <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                    android:id="@+id/tvdealname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/tvon"
                    android:gravity="left"
                    android:text="Cappuccino / Masala "
                    android:textSize="@dimen/font_medium"
                    android:textColor="@color/colorPrimary" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/LLprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvavaildate"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                    android:id="@+id/tvactualprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:maxLines="1"
                    android:text="33333"
                    android:textSize="@dimen/font_small"
                        android:textColor="@color/colorPrimary" />

                <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView
                    android:id="@+id/tvafterdisprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tvactualprice"
                    android:maxLines="1"
                    android:text="33333"
                    android:textSize="@dimen/font_small"
                    android:textColor="@color/colorPrimary" />

                <LinearLayout
                    android:id="@+id/LLcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView
                        android:id="@+id/tvsave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:maxLines="1"
                        android:text="Save"
                        android:textSize="@dimen/font_small"
                        android:textColor="@color/blackfontcolor" />

                    <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                        android:id="@+id/tvsaveamt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/tvsave"
                        android:maxLines="1"
                        android:text="33333"
                        android:textSize="@dimen/font_small"
                        android:textColor="@color/blackfontcolor" />

                </LinearLayout>


            </RelativeLayout>
            <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                android:id="@+id/tvdesc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="top|center_vertical"
                android:padding="15dp"
                android:scrollbars="vertical"
                android:text="By signing up I agree to the Privacy Policy and Terms of use"
                android:textSize="@dimen/font_small"
                android:textColor="#80000000" />

            <TextView
                android:id="@+id/etmodvdbno"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/darkGray"
                android:gravity="center"
                android:visibility="gone" />

            <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView
                android:id="@+id/josefinSansBoldTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="Deal Description"
                android:textSize="@dimen/font_medium"
                android:textColor="@color/blackfontcolor"
                android:visibility="gone" />

            <TextView
                android:id="@+id/et"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/darkGray"
                android:gravity="center"
                android:visibility="gone" />

        </LinearLayout>

        <ImageView
            android:id="@+id/cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/close" />
    </RelativeLayout>


    <!--  </RelativeLayout>-->

</RelativeLayout>