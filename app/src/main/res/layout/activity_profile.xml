<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_bottom_to_top"
    android:orientation="vertical"
    tools:context="com.hmi.dealsnxt.Activity.ProfileActivity">

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:openDrawer="right">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/toolbarnew"
            android:layout_weight=".92"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <RelativeLayout
                    android:id="@id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:padding="10dp"
                        android:src="@drawable/back" />

                    <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Profile"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/White"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivsignou2t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:padding="10dp"
                        android:src="@drawable/signout" />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/head"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/LL1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".88"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/RL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1">


                            <ImageView
                                android:id="@+id/ivEditIcon"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/etname"
                                android:layout_centerInParent="true"
                                android:layout_gravity="bottom"
                                android:layout_toRightOf="@+id/etname"
                                android:layout_weight=".1"
                                android:visibility="gone"
                                android:padding="5dp"
                                android:src="@drawable/edit" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/lll"
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@color/blackfontcolor"
                                android:textColor="@color/yellowcol"
                                android:text="  Personal"
                                android:textSize="25dp"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="8dp"
                                />



                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="@color/white">

                            <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                                android:id="@+id/gender_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/gender"
                                android:layout_marginTop="20dp"
                                android:padding="10dp"
                                android:backgroundTint="@android:color/transparent"
                                android:enabled="false"
                                android:hint= "Gender"
                                android:inputType="number"
                                android:maxLines="1"
                                android:drawablePadding="10dp"
                                android:singleLine="true"
                                android:textAppearance="?android:textAppearanceMedium"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white" />
                            </android.support.design.widget.TextInputLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:background="#AEB0B2"/>
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:textColorHint="@color/white"
                                android:hint="Email Id">

                            <com.hmi.dealsnxt.HelperClass.JosefinSansRegularEditText
                                android:id="@+id/etemail2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                               android:enabled="false"
                                android:hint="Email Id"
                                android:inputType="textEmailAddress"
                                android:padding="10dp"
                                android:maxLines="1"
                                android:layout_marginTop="20dp"
                                android:drawablePadding="10dp"
                                android:singleLine="true"
                                android:drawableLeft="@drawable/mail"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white" />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="@color/white"
                                >

                                <com.hmi.dealsnxt.HelperClass.JosefinSansRegularEditText
                                    android:id="@+id/etmobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/ll"
                                    android:backgroundTint="@android:color/transparent"
                                    android:enabled="false"
                                    android:hint="Phone"
                                    android:layout_marginTop="20dp"
                                    android:padding="10dp"
                                    android:drawableLeft="@drawable/phone"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:nextFocusDown="@+id/etFullName"
                                    android:drawablePadding="10dp"
                                    android:singleLine="true"
                                    android:textAppearance="?android:textAppearanceMedium"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/white" />
                            </android.support.design.widget.TextInputLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:background="#AEB0B2"/>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:textColorHint="@color/white"
                                android:layout_height="wrap_content">
                            <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                                android:id="@+id/etDOB"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/etemail"
                                android:layout_gravity="left"
                                android:layout_marginTop="20dp"
                                android:backgroundTint="@android:color/transparent"
                                android:enabled="false"
                                android:hint="DOB"
                                android:drawableLeft="@drawable/cake"
                                android:padding="10dp"
                                android:inputType="number"
                                android:maxLines="1"
                                android:nextFocusDown="@+id/etemail"
                                android:drawablePadding="10dp"
                                android:singleLine="true"
                                android:textAppearance="?android:textAppearanceMedium"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white" />
                            </android.support.design.widget.TextInputLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="15dp"
                                android:background="@color/blackfontcolor"
                                />

                            <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                                android:id="@+id/ivsignout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/etemail"
                                android:layout_gravity="left"
                                android:backgroundTint="@android:color/transparent"
                                android:enabled="false"
                                android:hint="  Logout"
                                android:drawableLeft="@drawable/signout"
                                android:inputType="number"
                                android:maxLines="1"
                                android:nextFocusDown="@+id/etemail"
                                android:drawablePadding="10dp"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textAppearance="?android:textAppearanceMedium"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lll"
                            android:visibility="gone"
                            android:orientation="vertical">
                            <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView

                                android:layout_width="wrap_content"
                                android:layout_height="45dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="5dp"
                                android:textAppearance="?android:textAppearanceMedium"
                                android:textColor="@color/Black"
                                android:layout_gravity="center" />

                            <Spinner
                                android:id="@+id/genderSpinner"
                                android:layout_width="wrap_content"
                                android:layout_height="45dp"
                                android:layout_alignParentLeft="true"
                                android:layout_gravity="center"
                                android:background="@drawable/edittext_border"
                                android:drawSelectorOnTop="true"
                                android:gravity="center"
                                android:inputType="textCapWords|textPersonName"
                                android:spinnerMode="dropdown"
                                android:textAlignment="center"
                                android:textAppearance="?android:textAppearanceMedium"
                                android:textColor="@color/Black"
                                android:textColorHint="@color/Black" />

                        </LinearLayout>




                        <com.hmi.dealsnxt.HelperClass.JosefinSansBoldTextView
                            android:id="@+id/save"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/buttoncol"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Save"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="@color/blackfontcolor" />
                    </RelativeLayout>

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:indeterminateTint="@color/ProgressBarColor"
                        android:visibility="gone" />
                </LinearLayout>



            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userimage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="15dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="80dp"
                android:src="@drawable/profile_pic"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="3dp" />

            <com.hmi.dealsnxt.HelperClass.JosefinSansRegularEditText
                android:id="@+id/etname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:backgroundTint="@android:color/transparent"
                android:enabled="false"
                android:hint="Name"
                android:inputType="textCapWords|textPersonName"
                android:maxLines="1"
                android:nextFocusDown="@+id/etFullName"
                android:padding="10dp"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_toRightOf="@+id/userimage" />

            <com.hmi.dealsnxt.HelperClass.JosefinSansRegularEditText
                android:id="@+id/etemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="135dp"
                android:backgroundTint="@android:color/transparent"
                android:enabled="false"
                android:hint="Email Id"
                android:layout_toRightOf="@+id/userimage"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:nextFocusDown="@+id/etname"
                android:padding="10dp"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

        </RelativeLayout>




    </android.support.v4.widget.DrawerLayout>


</RelativeLayout>

