<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/Rldeal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greyfontcol"
        android:padding="10dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/deal_image"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
            android:layout_height="100dp" />

        <RelativeLayout
            android:id="@+id/RLdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_below="@+id/deal_image"
            android:orientation="horizontal">
            <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                android:id="@+id/tvdealname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tvdiscount"
                android:gravity="right"
                android:layout_alignParentLeft="true"
                android:maxLines="1"
                android:text="Cappuccino / Masala Chhai"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/white" />

            <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                android:id="@+id/tvdiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="-6dp"
                android:gravity="left"
                android:text="30%off"
                android:visibility="gone"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/redcolor" />



        </RelativeLayout>

        <!--
                <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                    android:id="@+id/tvavaildate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/RLdata"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/timer"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Thuesday / Friday"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/white" />
        -->
    <RelativeLayout
        android:id="@+id/RLimage"
        android:layout_below="@+id/RLdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
            android:id="@+id/tvavailtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:layout_centerInParent="true"
            android:text="9.30am"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/white" />



        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/LL"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/RLimage"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                android:id="@+id/tvactualprice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:text="33333"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/white" />

            <!--    </RelativeLayout>-->

            <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                android:id="@+id/tvafterdisprice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tvactualprice"
                android:maxLines="1"
                android:text="33333"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/LLcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Quantity   "
                    android:textColor="@color/white"
                    android:textSize="20dp"/>

                <ImageView
                    android:id="@+id/ivminus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/minus_drawable"
                    android:src="@drawable/minus" />

                <com.hmi.dealsnxt.HelperClass.JosefinSansRegularTextView
                    android:id="@+id/tvcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tvstartime"
                    android:text="0"
                    android:maxLength="2"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />

                <ImageView
                    android:id="@+id/ivadd"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/minus_drawable"
                    android:src="@drawable/add" />
            </LinearLayout>




        </RelativeLayout>

        <!--   <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LL"
            android:orientation="horizontal"
            android:padding="5dp">
-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/LL">

        <TextView
            android:id="@+id/tvmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="More"
            android:paddingLeft="65dp"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:background="@drawable/new_button"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/ivgift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gift"
            android:layout_weight="1"
            android:paddingLeft="50dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="15dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/Black"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:background="@drawable/new_button"
            android:drawableLeft="@drawable/gift_deal" />
        </LinearLayout>
